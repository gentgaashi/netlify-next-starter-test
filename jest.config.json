{
    "bail": true,
    "moduleNameMapper": {
        "\\.(css|less)$": "<rootDir>/__mocks__/styleMock.js"
    },
    "transform": {
        "^.+\\.(ts|tsx)$": "babel-jest"
    },
    "testMatch": [
        "**/__tests__/*.(ts|tsx)"
    ],
    "setupFilesAfterEnv": [
        "<rootDir>/setup.jest.ts"
    ],
    "testPathIgnorePatterns": [
        "./.next/",
        "./node_modules/"
    ],
    "snapshotSerializers": [
        "enzyme-to-json/serializer"
    ]
}